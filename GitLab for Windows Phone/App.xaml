<Application
    x:Class="GitLab_for_Windows_Phone.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GitLab_for_Windows_Phone"
    xmlns:converters="using:GitLab_for_Windows_Phone.Converters"
    RequestedTheme="Dark">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <ImageBrush x:Key="HubBackgroundImageBrush" ImageSource="Assets/HubBackground.png"/>
                </ResourceDictionary>
                <ResourceDictionary x:Key="HighContrast">
                    <ImageBrush x:Key="HubBackgroundImageBrush" ImageSource="{x:Null}"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>


            <Color x:Key="DefaultBackgroundColor">#554488</Color>
            <SolidColorBrush Color="{StaticResource DefaultBackgroundColor}" x:Key="DefaultColorBrush" />
            <converters:DateTimeToStringConverter x:Key="DateTimeConverter" />
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
